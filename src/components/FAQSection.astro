---
interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  faqs?: FAQItem[];
}

const defaultFaqs: FAQItem[] = [
  {
    question: "What's your pricing model?",
    answer: "Depends on the engagement. MVPs and clearly bounded projects are usually fixed-price per phase. Consulting and ongoing work are typically monthly retainers."
  },
  {
    question: "Do you work with agencies?",
    answer: "Yes, as a specialized partner for complex frontends or critical projects. White-label arrangements are possible."
  },
  {
    question: "What time zones do you work with?",
    answer: "I'm in CET and usually work with clients across Europe, UK, and compatible US time zones."
  },
  {
    question: "Can you start next week?",
    answer: "Sometimes, but usually not. See the current availability section above for a realistic picture."
  }
];

const { faqs = defaultFaqs } = Astro.props;
---

<section class="faq">
  <h2>FAQ</h2>
  <div class="faq__list">
    {faqs.map((item) => (
      <details class="faq__item">
        <summary class="faq__question">
          <span>{item.question}</span>
          <svg class="faq__icon" width="24" height="24" viewBox="0 0 24 24" fill="none" aria-hidden="true">
            <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </summary>
        <div class="faq__answer">
          <p>{item.answer}</p>
        </div>
      </details>
    ))}
  </div>
</section>

<style lang="scss">
  .faq {
    padding: 4rem 0;

    h2 {
      text-align: center;
      margin-bottom: 2rem;
    }

    &__list {
      max-width: 800px;
      margin: 0 auto;
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    &__item {
      background-color: var(--background-light);
      border: 1px solid var(--border-color);
      border-radius: var(--radius);
      overflow: hidden;

      &[open] {
        .faq__icon {
          transform: rotate(180deg);
        }
      }
    }

    &__question {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 1.25rem 1.5rem;
      cursor: pointer;
      font-weight: 600;
      font-size: 1.125rem;
      list-style: none;
      user-select: none;

      &::-webkit-details-marker {
        display: none;
      }

      &::marker {
        display: none;
        content: "";
      }

      &:hover {
        background-color: rgba(255, 255, 255, 0.02);
      }

      &:focus-visible {
        outline: 2px solid var(--accent-color);
        outline-offset: -2px;
      }

      span {
        flex: 1;
        padding-right: 1rem;
      }
    }

    &__icon {
      flex-shrink: 0;
      transition: transform 0.2s ease;
      color: var(--accent-color);
    }

    &__answer {
      padding: 0 1.5rem 1.25rem;

      p {
        color: var(--text-secondary);
        line-height: 1.6;
      }
    }
  }
</style>
