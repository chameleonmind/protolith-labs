---
import GradientBorder from "./elements/GradientBorder.astro";
import serviceGlass1 from "../assets/images/service_glass_1.png";
import serviceGlass2 from "../assets/images/service_glass_2.png";
import serviceGlass3 from "../assets/images/service_glass_3.png";
import serviceGlass4 from "../assets/images/service_glass_4.png";

const steps = [
  { title: "Discovery", ordinal: "01", description: "We talk through your product, constraints, and what success looks like. I ask annoying but necessary questions.", bgImage: serviceGlass1 },
  { title: "Proposal & Scope", ordinal: "02", description: "You get a clear scope, timeline, and pricing model (fixed, phase-based, or retainer). No mystery billing.", bgImage: serviceGlass2 },
  { title: "Build & Iterate", ordinal: "03", description: "Design, implementation, and short feedback loops. Frequent check-ins, working software early, not a big reveal at the end.", bgImage: serviceGlass3 },
  { title: "Handoff & Support", ordinal: "04", description: "Documentation, walkthroughs, and support options so your team isn't lost when we're done.", bgImage: serviceGlass4 },
];
---
<section id="process" class="how">
  <div class="how__heading" aria-hidden="true">
    <h2>From first call to <span class="gradient-text">shipped release</span></h2>
    <p>
      <strong>Good products arenâ€™t built by accident.</strong><br>
      From the first call to the shipped release, each step is deliberate,
      transparent, and designed to move the product forward without unnecessary complexity.
    </p>
  </div>
  <ul class="how__steps">
    {steps.map((step) => (
      <GradientBorder as="li">
        <div class="how__steps--inner" style={`--bg-image: url(${step.bgImage.src})`}>
          <div class="how__steps--wrapper">
            <h3>{step.title}</h3>
            <div class="how__steps--content">
              <span class="ordinal">{step.ordinal}</span>
              <p>{step.description}</p>
            </div>
          </div>
        </div>
      </GradientBorder>
    ))}
  </ul>
</section>

<style lang="scss">
  .how {
    padding: 4rem 0;
    overflow: hidden;

    @media (min-width: 1200px) {
      overflow: visible;
    }

    &__heading {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 0 2rem;

      h2 {
        flex: 1 1 auto;
        color: var(--primary);
        text-align: center;
        text-wrap-style: pretty;

        @media (min-width: 768px) {
          text-align: left;
          flex: 1 1 40%;
          max-width: 40%;
        }
      }

      p {
        flex: 1 1 auto;
        text-align: center;

        @media (min-width: 768px) {
          text-align: left;
          flex: 1 1 60%;
          max-width: 60%;
        }

        strong {
          color: var(--primary);
        }
      }

      @media (min-width: 768px) {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }

    &__steps {
      position: relative;
      margin-top: 3rem;
      min-height: 100vh;
      padding: 0 1rem;

      @media (min-width: 768px) {
        padding: 0;
      }

      li {
        position: relative;
        width: 100%;
        cursor: default;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        margin-bottom: 1rem;
        height: 60vh;

        @media (min-width: 768px) {
          position: absolute;
          width: 45%;
          aspect-ratio: 1/1;
          margin-bottom: 0;
          height: unset;
        }

        &:nth-child(1) {
          @media (min-width: 768px) {
            top: 0;
            left: 0;
          }
        }

        &:nth-child(2) {
          @media (min-width: 768px) {
            top: 10%;
            right: auto;
            left: 18.33334%;
          }
        }

        &:nth-child(3) {
          @media (min-width: 768px) {
            top: 20%;
            left: 36.66667%;
          }
        }

        &:nth-child(4) {
          @media (min-width: 768px) {
            top: 30%;
            right: auto;
            left: 55%;
          }
        }

        &:hover {
          z-index: 99;

          .how__steps--inner::after {
            opacity: 0.75;
          }
        }
      }

      &--inner {
        border-radius: calc(1rem - 1px);
        overflow: hidden;
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        font-size: 1.5rem;
        background-color: var(--background-light);
        position: relative;
        z-index: 0;

        &::after {
          content: "";
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          border-radius: calc(1rem - 1px);
          z-index: 1;
          opacity: 0.35;
          transition: opacity 0.3s ease;
          background: var(--bg-image);
          background-size: cover;
          background-position: center;
        }

        > * {
          position: relative;
          z-index: 2;
        }

        h3 {
          font-size: 2.2rem;
          padding: 0 1rem;
          margin-bottom: 1rem;
          font-weight: 900;
          color: var(--primary);
          text-transform: uppercase;
        }
      }

      &--wrapper {
        padding-top: 3rem;
        background: linear-gradient(180deg, transparent 0%, var(--background-light) 100%);

        @media (min-width: 768px) {
          padding-top: 10rem;
        }
      }

      &--content {
        display: flex;
        align-items: center;
        padding-bottom: 1rem;

        .ordinal {
          font-size: 3rem;
          line-height: 1;
          font-family: "Funnel Display", sans-serif;
          font-weight: 900;
          padding: 0 0.5rem 0 1rem;
          border-right: 1px solid var(--text-color);
          color: var(--primary);

          @media (min-width: 768px) {
            font-size: 5rem;
          }
        }

        p {
          padding: 0 0.5rem;
          font-weight: bold;
          font-size: 1rem;

          @media (min-width: 768px) {
            font-size: 1rem;
          }
        }
      }
    }
  }
</style>